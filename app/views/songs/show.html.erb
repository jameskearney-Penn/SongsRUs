<body style="background-color:black;">
<div class="border-success">
<div class="d-flex justify-content-end">
  <a class="w-25"><img style="width:100%;" class="img-responsive" src= <%=@spotify_song.album.images[0]["url"] %>></a>
</div>
</div>
<h1 class="page-header text-success"><%= @spotify_song.name %></h1>
<h3 class = "text-white"><%= @spotify_song.album.name %></h3>
<%= link_to @song.artist.name, artist_show_url(Artist.find(@song.artist_id).spotify_id), style:"color:white" %>

<% if @spotify_song.preview_url.nil? %>
  Preview Unavailable
<% else %>
  <div class="border-success"><%=audio_tag(@spotify_song.preview_url, controls:true)%></div>
<% end %>

<br>
<br>
<br>
<br>

<h3 class = "text-success">Add to Playlist</h3>
<table class="table">
<tbody>
  <% current_user.playlists.each do |playlist| %>
    <tr>
    <% if !playlist.songs.include?(@song) and playlist.users[0].id == current_user.id%>    
    <h5><%= link_to playlist.title, add_song_url(song_id: @song.id, playlist_id: playlist.id), data: { confirm: 'Are you sure?' }, style:"color:white" %></h5>
    <% end %>
    </tr>
  <% end %>
</tbody>
</table>

<br>
<br>
<br>
<br>


</body>

